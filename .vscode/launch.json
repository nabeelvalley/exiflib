  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'rawlib'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=rawlib"],
        "filter": {
          "name": "rawlib",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'rawlib'",
      "cargo": {
        "args": ["build", "--bin=rawlib", "--package=rawlib"],
        "filter": {
          "name": "rawlib",
          "kind": "bin"
        }
      },
      "args": ["./sample/palm tree 1.jpg", "--jpeg"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'rawlib'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=rawlib", "--package=rawlib"],
        "filter": {
          "name": "rawlib",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
